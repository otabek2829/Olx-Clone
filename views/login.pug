extends layout
block  content 
  #login
    .container-fluid.m-0.pb-5
        .col-sm-3.m-auto
            h1.text-center.pt-5 #{title}
            form(action="/register/login" method="post")
                .mb-3
                    label.form-label(for="exampleInputEmail1") Login 
                    input.form-control#exampleInputEmail1(type="text" aria-describedby="emailHelp" name="login")
                .mb-3.m-auto
                    label.form-label(for="exampleInputEmail1" ) Password
                    input.form-control#password(type="password" minlength="6" aria-describedby="emailHelp" name="password")
                    i.far.fa-eye.open
                    i.far.fa-eye-slash.close
                a(href="/register").mb-2.mb-xxxl-0.btn.btn-warning.loadText Ro'yhatdan O'tish
                button.btn.btn-primary.loadText(type="submit") Kirish